{
  "compilerOptions": {
    "target": "ES2022",                    // Modern JS
    "module": "CommonJS",                  // Node-compatible
    "outDir": "dist",                      // Output folder for .js
    "rootDir": "src",                      // Your .ts files
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}